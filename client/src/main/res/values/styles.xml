<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SlideActivityAnim" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/SlideActivityAnimation</item>
    </style>

    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityCloseExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
    </style>

    <style name="SlideActivityAnim1" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/SlideActivityAnimation1</item>
    </style>

    <style name="SlideActivityAnimation1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="DivideHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/c_divide</item>
    </style>
</resources>
